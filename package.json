{
	"name": "@snickbit/ansi",
	"version": "0.0.10",
	"description": "Cross-platform replacement for chalk/ansi-* modules.",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsup --minify",
		"build:types": "tsc --emitDeclarationOnly --declarationDir dist",
		"clean": "shx rm -rf ./dist ",
		"depcheck": "depcheck",
		"dev": "tsup",
		"dev:types": "tsc --emitDeclarationOnly --declarationMap --declarationDir .types",
		"docs": "typedoc",
		"index": "indexer",
		"test": "jest",
		"watch": "concurrently -k -c magenta,cyan pnpm:watch:*",
		"watch:dev": "pnpm run dev --watch",
		"watch:types": "pnpm run dev:types --watch"
	},
	"jest": {
		"testEnvironment": "node"
	},
	"devDependencies": {
		"concurrently": "7.3.0",
		"@snickbit/indexer": "*",
		"jest": "28.1.3",
		"shx": "0.3.4",
		"tsup": "6.2.2",
		"typedoc": "0.23.11",
		"typedoc-plugin-markdown": "3.13.4",
		"typescript": "4.7.4"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.js"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
