{
	"name": "@snickbit/ansi",
	"description": "Cross-platform replacement for chalk/ansi-* modules.",
	"version": "0.0.3",
	"license": "MIT",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"engines": {
		"node": ">= 12"
	},
	"scripts": {
		"clean": "shx rm -rf ./dist ",
		"depcheck": "depcheck",
		"test": "jest",
		"build": "tsup",
		"meta": "npm run prod -- --metafile",
		"dev": "npm run build -- --sourcemap",
		"watch": "npm run dev -- --watch",
		"prod": "npm run clean && npm run build -- --minify",
		"docs": "typedoc"
	},
	"dependencies": {},
	"devDependencies": {
		"@remedyred/indexer": "^2.0.77",
		"jest": "^27.5.1",
		"shx": "^0.3.4",
		"tsup": "^5.12.6",
		"typedoc": "^0.22.15",
		"typedoc-plugin-markdown": "^3.12.0",
		"typescript": "^4.6.3"
	},
	"jest": {
		"testEnvironment": "node"
	},
	"tsup": {
		"entry": [
			"src/index.js"
		],
		"clean": true,
		"dts": true,
		"format": [
			"esm",
			"cjs"
		]
	}
}
