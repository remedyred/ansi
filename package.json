{
	"name": "@snickbit/ansi",
	"version": "0.0.24",
	"description": "Cross-platform replacement for chalk/ansi-* modules.",
	"license": "MIT",
	"exports": {
		"require": "./dist/index.js",
		"import": "./dist/index.mjs",
		"types": "./dist/index.d.ts"
	},
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "pnpm run bundle --minify",
		"bundle": "tsup",
		"clean": "shx rm -rf ./dist ",
		"dev": "pnpm run bundle --sourcemap",
		"dev:types": "tsc --project ./tsconfig.types.json",
		"docs": "typedoc",
		"test": "jest",
		"test:ci": "jest --ci --onlyChanged",
		"watch": "pnpm run dev --watch"
	},
	"release": {
		"extends": [
			"@snickbit/semantic-release"
		]
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node"
	},
	"devDependencies": {
		"@snickbit/eslint-config": "1.3.7",
		"@snickbit/semantic-release": "1.6.3",
		"@types/jest": "29.4.0",
		"eslint": "8.23.0",
		"jest": "28.1.3",
		"semantic-release": "19.0.5",
		"shx": "0.3.4",
		"ts-jest": "28.0.8",
		"tsup": "6.6.3",
		"typedoc": "0.23.14",
		"typedoc-plugin-markdown": "3.13.6",
		"typescript": "4.8.3"
	},
	"engines": {
		"node": ">= 12"
	},
	"tsup": {
		"entry": [
			"src/index.ts"
		],
		"clean": true,
		"onSuccess": "pnpm run dev:types",
		"format": [
			"esm",
			"cjs"
		]
	}
}
